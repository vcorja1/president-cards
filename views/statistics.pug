extends layout
block customcss
	style(type="text/css").
		th, td {
			padding: 15px;
			font-size: 16px;
		}
block content
	.main.container-fluid
		h1.text-center.blue President Card Game Player Statistics

		.pad-space
		.col-lg-offset-1.col-md-offset-1.col-sm-offset-1.col-ms-offset-1.col-xs-offset-1.align-items-center
			table.table-striped.col-lg-10.col-md-10.col-sm-10.col-ms-10.col-xs-10
				thead
					tr
						th.text-center User Name
						th.text-center Games
						th.text-center Wins
						th.text-center Losses
				tbody
					if(allStatistics == null || allStatistics == [])
						tr
							td.text-center(colspan='4') No player data found.
					else
						each playerStat in allStatistics
							tr
								td #{playerStat.name}
								td.text-center #{playerStat.games}
								td.text-center #{playerStat.wins}
								td.text-center #{playerStat.losses}