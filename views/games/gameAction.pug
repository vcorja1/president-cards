extends ../layout
block content
	include ../../partials/navbar.pug

	.main.container-fluid
		h2.red.small-caps.text-center#status Setting Up The Game...

		#alreadyPlayingContainer.hidden
			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
				.pad-space
				h3.text-center You already have a game in progress on another screen or device.
				h3.text-center Please use that screen to complete the game.

		#gameContainer.visible
			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-12
				h3.bold.text-center#opponentName Waiting For Your Opponent

			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-12
				.playingCards.simpleCards.full-width
					ul.hand#opponentHandContainer
						-for(let i = 0; i < 22; i++)
							li
								.card.back

			.col-lg-offset-4.col-lg-4.col-md-offset-4.col-md-4.col-sm-offset-4.col-sm-4.col-ms-offset-3.col-ms-6.col-xs-12
				.playingCards.simpleCards.moveContainer.full-width
					ul.deck#lastMoveContainer

			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-12
				.playingCards.simpleCards.full-width
					ul.hand#yourHandContainer
						-for(let i = 0; i < 22; i++)
							li
								.card.back

			#invalidMessageContainer.hidden
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12
					.pad-space-small
					h4.red.small-caps.text-center Invalid move, please play a valid move!

			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
				h3.bold.text-center #{displayName}

			#countdownTimerContainer.hidden
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12
					.pad-space-small
					h4.blue.small-caps.text-center#countdownTimer Time to play a hand or to pass:   45 seconds

			#gameButtonsContainer.visible
				.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
					.col-lg-offset-2.col-lg-3.col-md-offset-2.col-md-3.col-sm-5.col-ms-5.col-xs-12
						.pad-space-small
						a.text-center.btn.btn-info.btn-play.disabled#moveButton Play Move
					.col-lg-offset-2.col-lg-3.col-md-offset-2.col-md-3.col-sm-offset-2.col-sm-5.col-ms-offset-2.col-ms-5.col-xs-12
						.pad-space-small
						a.text-center.btn.btn-info.btn-play.disabled#passButton Pass

				.col-lg-offset-2.col-lg-8.col-md-offset-2.col-md-8.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
					.pad-space-small
					a.text-center.btn.btn-danger.btn-play.active#endGameButton Abort Game

			#newGameButtonsContainer.hidden
					.col-lg-offset-2.col-lg-3.col-md-offset-2.col-md-3.col-sm-offset-1.col-sm-4.col-ms-offset-1.col-ms-4.col-xs-offset-1.col-xs-4
						.pad-space
						a.text-center.btn.btn-info.btn-play#rematchButton Rematch
					.col-lg-offset-2.col-lg-3.col-md-offset-2.col-md-3.col-sm-offset-1.col-sm-4.col-ms-offset-1.col-ms-4.col-xs-offset-1.col-xs-4
						.pad-space
						a.text-center.btn.btn-info.btn-play(href=`/play`) New Game

		#abortContainer.hidden
			.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
				.pad-space
				a.text-center.btn.btn-info.btn-play(href=`/play`) Start New Game

block jscripts
	script(type='text/javascript' src='/js/socket.io.js')
	script(type='text/javascript' src='/js/client.js')
