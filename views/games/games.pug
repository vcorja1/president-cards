extends ../layout
block content
	.main.container-fluid
		h1.text-center.blue President Card Completed Games

		.pad-space
		.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
			if(completedGames == null || completedGames.length == 0)
				h3.text-center No completed games found.
			else
				table.table-striped.full-width
					thead
						tr
							th.text-center Game ID
							th.text-center Winner
							th.text-center Loser
					tbody
						each game in completedGames
							tr
								td.text-center
									a(href=`/games/${game.gameId}`) #{game.gameId}
								td.text-center #{game.winner}
								td.text-center #{game.loser}