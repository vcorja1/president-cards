extends ../layout
block content
	.main.container-fluid
		h1.text-center.blue Game Overview

		.pad-space
		.col-lg-offset-1.col-lg-10.col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-ms-offset-1.col-ms-10.col-xs-offset-1.col-xs-10
			if(gameDetails == null)
				h3.text-center This game is either in progress, was aborted, or wasn't played yet.
			else
				table.table-striped.full-width(style={'table-layout': 'fixed'})
					thead
						tr
							th.text-center Winner
							th.text-center Loser
					tbody
						tr
							td.text-center #{gameDetails.winner}
							td.text-center #{gameDetails.loser}